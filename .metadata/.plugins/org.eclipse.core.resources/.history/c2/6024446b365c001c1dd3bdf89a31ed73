package Arrays;

import java.util.Scanner;

public class Exercicio_2 {
	
	public static void main(String[] args) {
		
		
		float media=0;
		int dado[]=new int[11], maior=0, nx=0;
		
		for(int c=1;c<11;c++)
		{
			System.out.print("Informe o valor do dado: ");
			dado[c]= ler();
			
			if(maior<dado[c])
			{
				maior=dado[c];
			}
			else if(maior==dado[c])
			{
				nx++;
			}
			
			dado[0]=dado[0]+dado[c];
		}
		
		media = dado[0]/10;
		
		System.out.println("Os valores do vetor são: ");
		
		for(int c=0;c<11;c++)
		{
			System.out.print(dado[c]+"/t");
		}
		
		System.out.println("A média dos lançamentos é: "+ media);
		System.out.println("A maior lançamento é " + maior + " e aconteceu "+ nx+" vezes");
	}
	
	public static int ler () {
		
		int x=0;
		Scanner in =new Scanner(System.in);
		
		x=in.nextInt();
		in.close();
		
		return x;
	}

}
